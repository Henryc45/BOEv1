<section class="indepthlist list-group lo-in-depth-list">
  <ul class="galleryUL" id="lo-in-depth-list">
    <% let toShow = "" %> <% let sortedSchools = [...schools] %> <%
    sortedSchools.sort((a, b) => { %> <% if (a.name < b.name) { %> <% return -1;
    %> <% } %> <% }); %> <% sortedSchools.forEach(function(school, i) { %> <% if
    (i === 0) { %> <% toShow = "show" %> <% } else { %> <% toShow = "" %> <% }
    %>
    <li
      id="item-<%=i%>"
      class="indepthlistitema list-group-item list-group-item-action <%=toShow%>"
      href="#list-item-<%=i%>"
    >
      <div class="indepthlistitemcontainer lo-in-depth-list-top-info">
        <section class="lo-list-img-side">
          <% if (school.logoUrl) { %>
          <div class="lo-logo-wrapper">
            <img class="companylogo" src="<%= school.logoUrl %>" alt="Logo" />
          </div>
          <% } else { %>
          <div class="lo-logo-wrapper empty"></div>
          <% } %>
        </section>

        <section class="indepthlistitemtextcontainer lo-list-text-side">
          <a
            class="indepthlistitemOrganization"
            href="<%= school.siteUrl %>"
            target="_blank"
          >
            <h2><%= school.name %></h2></a
          >
          <br />
          <em class="indepthlistitemCategory"><%= school.type %></em>
          <br />
          <em class="indepthlistitemTrade"><%= school.programs %></em>
          <br />
          <em class="indepthlistitemCity"
            ><%= school.location.city %>, <%= school.location.state %></em
          >
        </div>
      </div>
      <br />
      <br />
      <hr />
      <strong class="descriptionlabel"> Description</strong>
      <p class="description"><%= school.description %></p>
      <hr />
      <strong class="tradesofferedlabel">Programs</strong>
      <p class="tradesoffered"><%= school.programs %></p>
      <hr />
      <%- include('./point-of-contact', {school: school}); %>
      <hr />

      <% if (school.premiumMembership) { %> <%- include('./application-premium',
      {school: school}); %> <% } else { %> <%- include('./application', {school:
      school}); %> <% } %>
      <aside class="lo-save-listing">
        <i class="fa-solid fa-heart"></i>
      </aside>
    </li>
    <% }); %>
  </ul>
</section>
